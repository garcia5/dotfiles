[alias]
	update = "fetch origin"
	cleanup = "! git-cleanup"
	rockstars = "shortlog -s -n --no-merges"
[core]
	pager = fzf-delta
[push]
	autoSetupRemove = true
[rebase]
	updateRefs = true
	autoSquash = true
[fetch]
	prune = true
[pull]
	rebase = true
[diff]
	colorMoved = default
[include]
	path = "~/.catppuccin.gitconfig"
[delta]
	features = decorations catppuccin-mocha
	navigate = true
	file-style = brightgreen
	hunk-header-style = omit
	line-numbers = true
	minus-style = syntax auto
	minus-emph-style = syntax ul auto
	minus-empty-line-marker-style = syntax auto
	plus-style = syntax auto
	plus-emph-style = syntax ul auto
	plus-empty-line-marker-style = syntax auto

